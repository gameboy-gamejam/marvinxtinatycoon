<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6FCCFF">
<!--     android:background="#EEECD2"> -->
<!--     android:background="#6874A5"> -->

    <View 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
   		android:background="@drawable/background_town"
        />
    
    <Button
        android:id="@+id/buttonLeft"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/arrow_left" 
        android:padding="5dp" />

    <Button
        android:id="@+id/buttonRight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/arrow_right" 
        android:padding="5dp" />

    <View 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="#116FCCFF"/>
<!--     android:background="#77EEECD2"/> -->
<!--         android:background="#776874A5"/> -->

    <Button
        android:id="@+id/buttonGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Button" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_above="@+id/buttonGo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/market"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/buttonSave"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Button" />

    <Button
        android:id="@+id/buttonIngredients"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/buttonSave"
        android:text="Button" />

    <Button
        android:id="@+id/buttonRecipe"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/buttonIngredients"
        android:text="Button" />

    <TextView
        android:id="@+id/textGourmetPoints"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_gourmet"
        android:gravity="center"
        android:text="0"
        android:textColor="#fff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textGourmetPoints"
        android:layout_centerHorizontal="true"
        android:text="Level 5" />

    <TextView
        android:id="@+id/textDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="DAY 1"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textStamina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:drawableTop="@drawable/icon_stamina_vectorized"
        android:text="10" />

    <TextView
        android:id="@+id/textRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:drawableTop="@drawable/icon_rate_vectorized"
        android:layout_toLeftOf="@id/textStamina"
        android:gravity="center_horizontal"
        android:text="TextView" />

    <TextView
        android:id="@+id/textGold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/textRate"
        android:drawableTop="@drawable/icon_gold_vectorized"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:text="TextView" />

</RelativeLayout>