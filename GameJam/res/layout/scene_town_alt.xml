<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6FCCFF" >

    <!-- android:background="#EEECD2"> -->
    <!-- android:background="#6874A5"> -->

    <View
        android:id="@+id/bgSky"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6FCCFF" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_town" />

    <Button
        android:id="@+id/buttonLeft"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_left_arrow"
        android:padding="5dp" />

    <Button
        android:id="@+id/buttonRight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_right_arrow"
        android:padding="5dp" />

    <!-- android:background="#77EEECD2"/> -->
    <!-- android:background="#776874A5"/> -->

    <View
        android:id="@+id/bgFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#116FCCFF" />
    
    <Button
        android:id="@+id/buttonGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_blue"
        android:textStyle="bold"
        android:textColor="#fff"
        android:text="ENTER" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_above="@+id/buttonGo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/shop" />

    <Button
        android:id="@+id/buttonSave"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:drawableTop="@drawable/icon_floppy"
        android:text="SAVE"
        android:textColor="#fff"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:drawablePadding="2dp"
        android:background="@null" />

    <Button
        android:id="@+id/buttonIngredients"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/buttonSave"
        android:drawableTop="@drawable/icon_list"
        android:text="ITEM"
        android:textColor="#fff"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:drawablePadding="2dp"
        android:background="@null"
        android:layout_marginRight="15dp" />

    <Button
        android:id="@+id/buttonRecipe"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/buttonIngredients"
        android:drawableTop="@drawable/icon_plate"
        android:text="DISH"
        android:textColor="#fff"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:drawablePadding="2dp"
        android:background="@null"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/textGourmetPoints"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-5dp"
        android:background="@drawable/bg_gourmet"
        android:gravity="center"
        android:text="0"
        android:textColor="#fff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textGourmetPoints"
        android:layout_centerHorizontal="true"
        android:text="LEVEL 5"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textGold"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:background="@drawable/bg_default_on"
        android:drawableLeft="@drawable/icon_gold"
        android:drawablePadding="10dp"
        android:gravity="right"
        android:text="10G"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textRating"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textGold"
        android:layout_below="@+id/textGold"
        android:background="@drawable/bg_default_on"
        android:drawableLeft="@drawable/icon_like"
        android:drawablePadding="10dp"
        android:gravity="right"
        android:text="0"
        android:layout_marginBottom="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textCustomers"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textRating"
        android:background="@drawable/bg_default_on"
        android:drawableLeft="@drawable/icon_people"
        android:layout_alignLeft="@+id/textGold"
        android:drawablePadding="10dp"
        android:gravity="right"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:text="DAY 1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonMainMenu"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="BACK"
        android:textStyle="bold"
        android:drawableTop="@drawable/icon_undo"
        android:textColor="#fff"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:drawablePadding="2dp"
        android:background="@null" />
</RelativeLayout>