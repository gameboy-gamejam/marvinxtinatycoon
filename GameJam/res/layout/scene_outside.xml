<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/bgSky"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6FCCFF" />
        
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="@drawable/background_outside" />
    
    <View
        android:id="@+id/bgFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#116FCCFF" />
    
    <Button
        android:id="@+id/buttonTown"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:drawableTop="@drawable/icon_undo"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="BACK"
        android:textColor="#fff" />

    <Button
        android:id="@+id/buttonGame2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="25dp"
        android:background="@drawable/btn_blue"
        android:text="MINI GAME 2\nFISHING"
        android:textColor="#fff"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2" />

    <Button
        android:id="@+id/buttonGame3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="25dp"
        android:layout_toRightOf="@+id/buttonGame2"
        android:text="MINI GAME 3\nAPPLE"
        android:background="@drawable/btn_red"
        android:textColor="#fff"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"  />

    <Button
        android:id="@+id/buttonGame1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="25dp"
        android:layout_toLeftOf="@+id/buttonGame2"
        android:background="@drawable/btn_green"
        android:text="MINI GAME 1\nCARROT"
        android:textColor="#fff"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"  />

    <TextView
        android:id="@+id/textStamina"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_default_on"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="right|bottom"
        android:text="10"
        android:drawableLeft="@drawable/icon_heart"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>