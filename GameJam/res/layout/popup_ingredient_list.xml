<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/holder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_default"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dummy Name" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/holder_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/holder_name"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_default"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients" />

        <RelativeLayout
            android:id="@+id/holder_ingredient_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5" >

            <TextView
                android:id="@+id/name_ingredient_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Pizza" />

            <TextView
                android:id="@+id/max_ingredient_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="35" />

            <TextView
                android:id="@+id/divider_ingredient_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/max_ingredient_1"
                android:text=" / " />

            <TextView
                android:id="@+id/current_ingredient_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/divider_ingredient_1"
                android:text="0" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/holder_ingredient_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5" >

            <TextView
                android:id="@+id/name_ingredient_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Pizza" />

            <TextView
                android:id="@+id/max_ingredient_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="35" />

            <TextView
                android:id="@+id/divider_ingredient_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/max_ingredient_2"
                android:text=" / " />

            <TextView
                android:id="@+id/current_ingredient_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/divider_ingredient_2"
                android:text="0" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/holder_ingredient_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5" >

            <TextView
                android:id="@+id/name_ingredient_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Pizza" />

            <TextView
                android:id="@+id/max_ingredient_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="35" />

            <TextView
                android:id="@+id/divider_ingredient_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/max_ingredient_3"
                android:text=" / " />

            <TextView
                android:id="@+id/current_ingredient_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/divider_ingredient_3"
                android:text="0" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/holder_count"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/holder_ingredients"
        android:background="@drawable/bg_default" >

        <LinearLayout
            android:id="@+id/holder_count_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/current_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/max_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/dp_15" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_toLeftOf="@+id/holder_count_info"
            android:src="@drawable/btn_up" />

        <ImageView
            android:id="@+id/btn_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@+id/holder_count_info"
            android:src="@drawable/btn_down" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/holder_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/holder_count"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_default"
            android:gravity="center"
            android:text="Close" />

        <TextView
            android:id="@+id/btn_cook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_default"
            android:gravity="center"
            android:text="Cook" />
    </LinearLayout>

</RelativeLayout>