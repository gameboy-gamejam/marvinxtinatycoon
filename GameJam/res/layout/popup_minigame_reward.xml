<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_overlay">
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#556677"
        android:padding="5dp" >
        <TextView
            android:id="@+id/pointsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_12"
            android:text="@string/points_earned"/>
        <TextView 
            android:id="@+id/points"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/dp_12"
            android:textStyle="bold"
            android:paddingLeft="@dimen/dp_5"
   			android:layout_alignBottom="@id/pointsLabel"
   			android:layout_toRightOf="@id/pointsLabel"/>
        <LinearLayout
            android:id="@+id/rewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/pointsLabel"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:gravity="center"
            android:layout_below="@id/rewards">
            
            <Button 
                android:id="@+id/returnTown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_12"
                android:text="@string/return_to_town"/>
            
            <Button 
                android:id="@+id/playAgain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:textSize="@dimen/dp_12"
                android:text="@string/play_again"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>