<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTheme" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorTertiary">@color/white</item>
    </style>

    <style name="ThemePop" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorTertiary">@color/white</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="GBTheme" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorTertiary">@color/white</item>
        <item name="android:windowBackground">@drawable/bg_default</item>
    </style>

    <style name="GBTheme.Dialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/bg_default</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="GBTheme.Transparent" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>